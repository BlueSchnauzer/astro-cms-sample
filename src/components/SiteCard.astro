---
import type { Site } from '../types';

export interface Props {
  site: Site;
}

const { site } = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 overflow-hidden">
  <div class="aspect-video bg-gray-200 overflow-hidden">
    {site.thumbnail ? (
      <img 
        src={site.thumbnail} 
        alt={site.name}
        class="w-full h-full object-cover hover:scale-105 transition-transform duration-200"
      />
    ) : (
      <div class="w-full h-full bg-gradient-to-br from-green-100 to-green-200 flex items-center justify-center">
        <svg class="w-12 h-12 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9a9 9 0 01-9-9m9 9c0 5-4 9-9 9s-9-4-9-9m9-9c0-5 4-9 9-9s9 4 9 9" />
        </svg>
      </div>
    )}
  </div>
  
  <div class="p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-2">
      <a href={`/sites/${site.id}`} class="hover:text-blue-600 transition-colors">
        {site.name}
      </a>
    </h3>
    
    <p class="text-gray-600 text-sm mb-4 line-clamp-3">
      {site.description}
    </p>
    
    <div class="flex items-center justify-between">
      <a 
        href={site.url} 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-blue-600 hover:text-blue-700 text-sm font-medium flex items-center"
      >
        サイトを訪問
        <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
      
      <a 
        href={`/sites/${site.id}`}
        class="bg-blue-600 hover:bg-blue-700 text-white text-sm px-4 py-2 rounded-md transition-colors"
      >
        詳細を見る
      </a>
    </div>
  </div>
</div>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
---
import type { Tag } from '../types';

export interface Props {
  tags: Tag[];
  title?: string;
}

const { tags, title = "人気のタグ" } = Astro.props;
---

<section class="bg-white rounded-lg shadow-sm p-6">
  <h2 class="text-xl font-semibold text-gray-900 mb-4">{title}</h2>
  
  <div class="flex flex-wrap gap-3">
    {tags.map(tag => (
      <a 
        href={`/tags/${tag.id}`}
        class="inline-flex items-center px-4 py-2 rounded-full text-white hover:opacity-80 transition-opacity font-medium"
        style={`background-color: ${tag.color || '#6B7280'}`}
      >
        {tag.name}
        <svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    ))}
  </div>
  
  {tags.length === 0 && (
    <p class="text-gray-500 text-center py-8">
      タグが見つかりませんでした。
    </p>
  )}
</section>